<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icon_splash_bg"
    android:orientation="vertical">

    <yanzhikai.textpath.SyncTextPathView
        android:id="@+id/stpv_wa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:duration="3000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:paintStrokeColor="#9400D3"
        app:pathStrokeColor="#9400D3"
        app:showPainter="true"
        app:text="Wan Android"
        app:textInCenter="true"
        app:textSize="55sp" />

    <yanzhikai.textpath.SyncTextPathView
        android:id="@+id/stpv_cbh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:duration="3000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stpv_wa"
        app:paintStrokeColor="#9370DB"
        app:pathStrokeColor="#9370DB"
        app:showPainter="true"
        app:showPainterActually="true"
        app:text="Created by hzy"
        app:textInCenter="true"
        app:textSize="32sp" />


</android.support.constraint.ConstraintLayout>